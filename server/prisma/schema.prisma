// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id String @default(uuid()) @id
}


model Comments {
  id String @default(uuid()) @id
  content String
}

model Post {
  id String @default(uuid()) @id
  content String
  likes Int @default(0)
  }
