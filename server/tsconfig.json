{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "NodeNext",
      "outDir": "./dist",
      "noImplicitAny": true,
      "sourceMap": true,
      "noEmit": true
      "allowImportingTsExtensions": true,
    },
    "baseUrl": "./",
    "exclude": ["node_modules"],
    "include": ["src/**/*", "**/*.ts", "**/*.tsx"],
    "ts-node": {
      "esm": true, // «———— enabling ESM for ts-node   
    },
  }
  